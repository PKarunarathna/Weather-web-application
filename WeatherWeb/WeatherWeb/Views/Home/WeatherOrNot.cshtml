
@{
    ViewBag.Title = "Weather Or Not";
}

<h2>Weather</h2>
<div class="col-md-12">
    <h5> Current conditions in <span data-bind="text:name"></span></h5>
</div>
<div class="col-md-12">
    Temperature is <span data-bind="text:main.temp"></span>&deg; F
</div>
<button>Get Weather</button>

<script>
    var weather = Object();
    $(document).ready(function () {
        $("button").click(function () {
            $.get("@Url.Action("GetWeather", "Home")", function (respone) {
                console.log(response);
                weather = ko.mapping.fromJS(response);
                ko.applyBindings(weather);
            });
        });
    });
</script>